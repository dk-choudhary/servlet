Transction table:-
create table transction(ac_number long, credit long,debit long,from_ac long,to_ac long,balance long,transaction_date timestamp default current_timestamp);

customer_loan Table:-
create table customer_loan(ac_number bigint ,loan_ac_number bigint auto_increment primary key,loan_amount int,duration int,emi int,remining_amount int,remining_emi int,total_payable_amount int,stutas varchar(20),pannding_level int);





